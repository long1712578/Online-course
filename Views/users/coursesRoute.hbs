{{> header}}
<!--Content-->
<section class="content">
    <div class="container">
        <ul class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="/home" title="Trang chủ"><i class="fa fa-home"></i></a>
            </li>
            <li class="breadcrumb-item">
                <a href="/coursesRoute" title="Lộ trình">&nbsp; Lộ trình</a>
            </li>
        </ul>
        <div class="row">
            <div class="col-md-3">
                <aside class="sidebar-categories">
                    <div class="module">
                        <h3 class="modtitle">
                            <span>Danh mục</span>
                        </h3>
                        <ul class="list-group">
                            <li class="list-group-item"><a href="#" title="Khoá học đề xuất">Lộ trình đề xuất</a>
                            </li>
                            <li class="list-group-item"><a href="#" title="Lộ trình miễn phí">Lộ trình miễn phí</a>
                            </li>
                            <li class="list-group-item"><a href="#" title="Lộ trình có phí">Lộ trình có phí</a></li>
                        </ul>
                    </div>
                </aside>
            </div>
            <div class="col-md-9">
                <!---content product -->
                <div class="content">
                    <div class="row">
                        {{#each route}}
                        <div class="col-sm-6 col-md-4">
                            <div class="mc-item mc-item-2 learning-path">
                                <div class="image-heading">
                                    <a href="/user/coursesRoute/{{id}}" title="{{name}}"><img style="max-height: 180px;"
                                            title="{{name}}" src="../../public/img/{{image}}"
                                            alt="Lo trinh hoc angular"></a>

                                </div>
                                <div class="content-item">
                                    <h4 href="/user/coursesRoute/{{id}}" title="{{name}}">{{name}}</h4>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                    {{!-- Pading product --}}

                    <div class="row d-flex justify-content-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                {{#if navs.prev}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{ navs.prev}}" aria-label="Previous">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                {{else}}
                                <li class="page-item disabled">
                                    <a class="page-link" href="/user/coursesRoute?page={{value}}" tabindex="-1"
                                        aria-disabled="true">
                                        <span aria-hidden="true">&laquo;</span>
                                    </a>
                                </li>
                                {{/if}}
                                {{#each pages}}
                                {{#if active}}
                                <li class="page-item active" aria-current="page">
                                    <a class="page-link" href="javascript:;">
                                        {{ value }} <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                {{else}}
                                <li class="page-item">
                                    <a class="page-link" href="/user/coursesRoute?page={{value}}">
                                        {{value}}
                                    </a>
                                </li>
                                {{/if}}
                                {{/each}}
                                {{#if navs.next}}
                                <li class="page-item">
                                    <a class="page-link" href="?page={{ navs.next}}" aria-label="Next">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                                {{else}}
                                <li class="page-item disabled">
                                    <a class="page-link" href="/user/coursesRoute?page={{value}}" tabindex="-1"
                                        aria-disabled="true">
                                        <span aria-hidden="true">&raquo;</span>
                                    </a>
                                </li>
                                {{/if}}
                            </ul>
                        </nav>
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>