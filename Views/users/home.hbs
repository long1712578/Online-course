{{!-- 3-4 Khoa hoc noi bac trong tuan --}}
<section id="mc-section-4" class="mc-section-3 section">
  <div class="container">
    <div class="module so-deals">
      <h3 class="modtitle">
        <span>Khoa học nổi bậc trong tuần</span>
      </h3>
      <a href="/user/courses" title="Tất cả các lộ trình học tập" class="all-course mc-btn btn-style-1">Xem tất cả</a>
      <div class="module-body">
        <div class="owl-carousel owl-theme" style="display: block; opacity: 1;">
          {{#each coursesStar}}

          <div class="item" style="width: auto;">
            <div class="card h-100">
              <div class="mc-item mc-item-1">
                <div class="image-heading">
                  <a href="/user/courses/{{courses.id}}" title="{{courses.name}}"><img style="max-height: 180px;"
                      title="{{courses.name}}" src="../../public/img/{{courses.image}}" alt="Xay dung khoa hoc"></a>
                </div>
                <div class="card-content-margin">
                  <div class="meta-categories">
                    <a href="/user/courses/{{courses.id}}" title="{{courses.name}}">{{courses.name}}</a>
                  </div>
                  <div class="content-item">
                    <div class="image-author">
                      <a href="#" title="Giảng viên: Phạm Đình Long">...</a>
                    </div>
                    <h4><a href="#" title="{{courses.name}}">{{courses.name}}</a></h4>
                    <div class="name-author">
                      <span>Bởi
                        <a href="/user/teacher/{{courses.idTeacher}}"
                          title="Giảng viên: {{courses.FullName}}">{{courses.FullName}}</a>
                      </span>
                    </div>
                  </div>
                  <div class="ft-item">
                    <div class="rating">

                      Đánh giá:
                      {{#each star}}
                      <span class="fa fa-star checked"></span>
                      {{/each}}

                    </div>
                    <div class="view-info">
                      <i class="fa fa-users" aria-hidden="true"></i>{{courses.view}}
                    </div>
                    <div class="price">
                      <span>{{format courses.price}} đ</span>
                    </div>
                  </div>
                </div>

              </div>
            </div>

          </div>

          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
