    <script>
  $('#frmRegister').on('submit', function (e) {
    e.preventDefault();

    const username = $('#inputUsername').val();
    if (username.length === 0) {
      alert('Invalid data.');
      return;
    }

    $.getJSON(`/is-available?user=${username}`, function (data) {
      if (data === true) {
        $('#frmRegister').off('submit').submit();
      } else {
        alert('Invalid data.');
      }
    })
  });

  $('#inputDOB').datetimepicker({
    format: 'd/m/Y',
    timepicker: false,
    mask: true,
  });
</script>
